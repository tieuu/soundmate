<h1>My bookings</h1>
<br>

<% @bookings.select { |booking| booking.user == current_user }.each do |booking| %>
  <h2><%= link_to booking.equipment.ad_name, "equipment/#{booking.equipment_id}" %> - <%= booking.status %></h2>
  <ul>
    <li><%= booking.equipment.category %> booked from <%= booking.equipment.user.name %></li>
    <li>from <%= l(booking.start_date.to_date, format: :long) %> to <%= l(booking.end_date.to_date, format: :long) %> </li>
  </ul>
<% end %>

<br>
  <%= link_to 'Back to list', equipment_index_path %>
