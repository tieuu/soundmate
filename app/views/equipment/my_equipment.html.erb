<div class="home-body">
  <div class="d-flex justify-content-center align-items-center">
    <div class="col-4 pt-5" id="short">
      <h1 class="banner" style="font-size: 54px;"><%= current_user.name.capitalize %>'s Equipment List</h1>
    </div>
    <div class="col-6 mt-5" id="padding-left">
      <div class="col-10 mx-auto">
        <%= simple_form_for @equipment, wrapper: :input_group do |f| %>
          <%= f.input :category,
                collection: Equipment::CATEGORY,
                label: false,
                prepend: 'Category' %>
          <%= f.input :ad_name,
                label: false,
                prepend: 'Name'%>
          <%= f.input :description,
                label: false,
                prepend: 'Description' %>
          <%= f.input :price,
                label: false,
                prepend: 'Rent price',
                append: 'Â¥ / day' %>
          <%= f.input :photos,
                as: :file,
                label: false,
                input_html: { multiple: true } %>
          <%= f.input :active,
                wrapper: :custom_boolean_switch,
                label: 'Check to Start Renting Now' %>
          <%= f.submit 'Add', class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>

  <hr>

  <div class="container">
    <div class="row">
      <% @equipments.select { |equipment| equipment.user == current_user }.each do |equipment| %>
        <%= link_to equipment_path(equipment), class: 'col-12 no-decoration' do %>
          <div class="card-product">
            <% unless equipment.photos.attached? %>
              <%= cl_image_tag('nd6mdgkmkyp5fok5ig9n.png', crop: :fill) %>
            <% else %>
              <%= cl_image_tag(equipment.photos.first.key, crop: :fill) %>
            <% end %>
            <div class="card-product-infos">
              <h2><%= equipment.ad_name %> </h2>
              <p><%= equipment.category.capitalize %> from <%= equipment.user.name.capitalize %></p>
              <p><%= ActiveSupport::NumberHelper.number_to_currency(equipment.price.round, locale: :ja) %>/day</p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
