<%= simple_form_for @equipment do |f| %>
  <%= f.input :category,
              collection: Equipment::CATEGORY,
              label: false,
              placeholder: 'Choose a Category' %>
  <%= f.input :ad_name,
              label: false,
              placeholder: 'Give a Title'%>
  <%= f.input :description,
              label: false,
              placeholder: 'Describe your equipment here' %>
  <%= f.input :photo,
              as: :file,
              label: false,
              input_html: { multiple: true } %>
  <%= f.input :price,
              label: false,
              placeholder: 'Rent price in JPY' %>
  <%= f.input :active,
              label: 'Check to Start Renting Now' %>
  <%= f.submit 'Add', class: 'btn btn-primary' %>
<% end %>
<br>
<%= link_to 'Back to list', equipment_index_path %>
