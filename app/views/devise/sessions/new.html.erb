<div class="d-flex justify-content-center align-items-center">
  <div class="col-4 home-body">
    <h1 class="banner">Log in</h1>
  </div>

  <div class="col-4" id="padding-left">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "btn btn-outline-light btn-md" %>
        <%= link_to 'Sign up', new_user_registration_path, class: "btn btn-outline-light btn-md" %>
      </div>
    <% end %>
  </div>
</div>
